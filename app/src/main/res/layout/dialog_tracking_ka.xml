<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="21dp"
    android:background="@android:color/white"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="28dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/ka2_ilustrasi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-28dp"
            android:fontFamily="@font/roboto_semibold"
            android:gravity="center"
            android:text="Tracking Kereta"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <AutoCompleteTextView
            android:id="@+id/searchNamaKa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="21dp"
            android:inputType="text"
            android:singleLine="false"
            android:lines="2"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableStart="@drawable/ic_depart"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:hint="Nama Kereta" />

        <TextView
            android:id="@+id/btnCariKa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_stroke"
            android:fontFamily="@font/roboto_semibold"
            android:gravity="center"
            android:paddingHorizontal="50dp"
            android:layout_marginTop="21dp"
            android:paddingVertical="12dp"
            android:text="Cari Kereta"
            android:textColor="@color/purple"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/searchNamaKa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
